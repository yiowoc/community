<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yiowoc.community.mapper.QuestionMapper">
    <!-- int insert(Question question); -->
    <insert id="insert" parameterType="question">
        insert into question (title, description, gmt_create, gmt_modified, creator, tag)
        values (#{title}, #{description}, #{gmtCreate}, #{gmtModified}, #{creator}, #{tag})
    </insert>
    <!-- List<Question> selectAllQuestions(); -->
    <select id="selectAllQuestions" resultType="question">
        select * from question
    </select>
    <!-- List<Question> selectQuestionsPage(Integer offset, Integer size); -->
    <select id="selectQuestionsPage" resultType="question">
        select * from question limit #{offset}, #{size}
    </select>
    <!-- Integer selectAllCount(); -->
    <select id="selectAllCount" resultType="java.lang.Integer">
        select count(1) from question
    </select>
    <!-- Integer selectCountByUserId(Integer userId); -->
    <select id="selectCountByUserId" resultType="java.lang.Integer">
        select count(1) from question where creator = #{userId}
    </select>
    <!-- List<Question> selectQuestionsPageByUserId(Integer userId, Integer offset, Integer size); -->
    <select id="selectQuestionsPageByUserId" resultType="question">
        select * from question where creator = #{userId} limit #{offset}, #{size}
    </select>
    <!-- Question selectQuestionById(Integer id); -->
    <select id="selectQuestionById" resultType="question">
        select * from question where id = #{id}
    </select>
    <!-- void update(Question question); -->
    <update id="update" parameterType="question">
        update question set title = #{title}, description = #{description}, tag = #{tag}, gmt_modified = #{gmtModified}
        where id = #{id}
    </update>
</mapper>